_tel()
{
    local cur prev opts
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"
    opts="status covers roof park slew track offset focus stop cal init kill"

    case "${prev}" in
        covers|roof)
            opts="open close"
            ;;
        park)
            opts=$(tel list-parks ${prev})
            ;;
        cal)
            opts="home limits"
            ;;
        *)
            ;;
    esac

    COMPREPLY=($(compgen -W "${opts}" -- ${cur}))
    return 0
}

complete -o filenames -F _tel tel
