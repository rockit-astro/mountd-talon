[Unit]
Description=Daemon for controlling the Warwick one-metre and SuperWASP telescopes via Pyro.
After=syslog.target
Wants=network-online.target
After=network-online.target

[Service]
Restart=on-failure
Type=simple
ExecStart=/usr/bin/env python3.6 -u /usr/bin/teld /etc/teld/%i.json
ExecStartPost=/usr/bin/env python3.6 -u /usr/bin/obslog info teld Started by systemd
ExecStopPost=/usr/bin/env python3.6 -u /usr/bin/obslog info teld Stopped by systemd
StandardOutput=syslog
StandardError=syslog

[Install]
WantedBy=multi-user.target
